---
interface Movie {
  id: number;
  title: string;
  poster_path: string | null;
  vote_average: number;
  release_date: string;
  overview?: string;
}

interface Props {
  movie: Movie;
}

const { movie } = Astro.props as Props;
---

<a href={`/movies/${movie.id}`} class="card" data-transition="fade">
  <picture class="card-img">
    <img
      src={movie.poster_path 
        ? `https://image.tmdb.org/t/p/w500${movie.poster_path}` 
        : "https://via.placeholder.com/500x750?text=No+Image"}
      alt={movie.title}
    />
  </picture>

  <header class="card-info">
    <h2 class="title">{movie.title}</h2>
    <p class="rating">
      ⭐ {movie.vote_average} • {movie.release_date}
    </p>
    {movie.overview && (
      <p class="overview">{movie.overview}</p>
    )}
  </header>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: #000;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    text-align: center;
    color: #fff;
    transition: transform 0.3s, box-shadow 0.3s, filter 0.3s;
    text-decoration: none;
  }

  .card:hover {
    transform: scale(1.13);
    box-shadow: 0 0 15px 6px #ffea00;
    filter: brightness(1.15);
  }

  .card-img img {
    width: 100%;
    height: 380px;
    object-fit: cover;
    border-radius: 8px;
  }

  .title {
    color: #ffea00;
    font-size: 1.3rem;
    font-weight: 700;
  }

  .rating {
    color: #ccc;
    font-size: 1.1rem;
  }

  .overview {
    color: #aaa;
    font-size: 0.85rem;
    line-height: 1.3;
    max-height: 3.2em;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
