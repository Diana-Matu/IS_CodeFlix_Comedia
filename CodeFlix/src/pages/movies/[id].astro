---
import { getMovieById } from "../../services/movies";

export const prerender = false;

const id = Astro.params.id;

if (!id) {
  throw new Error("ID no proporcionado en la URL.");
}

const movie = await getMovieById(id);

const filter = Astro.url.searchParams.get("filter") ?? "";
const query = Astro.url.searchParams.get("query") ?? "";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{movie?.title ?? movie?.name ?? "Película"}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        background: #0a0a09;
        color: #fff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .detail {
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
      }

      .back-btn {
        background: #ffea00;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        cursor: pointer;
        margin-bottom: 1rem;
      }

      .content {
        display: flex;
        gap: 2rem;
        background: #111;
        padding: 1.5rem;
        border-radius: 12px;
      }

      .poster {
        width: 300px;
        height: 450px;
        object-fit: cover;
        border-radius: 12px;
      }

      .info {
        flex: 1;
      }

      .rating {
        color: #ddd;
        margin: 0.5rem 0;
      }

      .overview {
        color: #aaa;
        line-height: 1.5;
      }

      @media (max-width: 800px) {
        .content {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }

        .poster {
          width: 100%;
          max-width: 350px;
          height: auto;
        }

        .info {
          text-align: center;
        }
      }
    </style>

    <!-- === Global Card Style (same as Movies.astro) === -->
    <style is:global>
      .card {
        display: flex;
        flex-direction: column;
        background-color: #000;
        color: #fff;
        border-radius: 12px;
        overflow: hidden;
        text-decoration: none;
        transition: transform 0.25s, box-shadow 0.25s;
      }

      .card:hover {
        transform: scale(1.06);
        box-shadow: 0 0 15px 6px #ffea00;
      }

      .card-img,
      .card img {
        width: 100%;
        height: 340px;
        object-fit: cover;
        display: block;
      }

      .card-info {
        padding: 0.8rem;
        text-align: center;
      }

      .card-info .title {
        color: #ffea00;
        font-size: 1.05rem;
        font-weight: 700;
        margin: 0.25rem 0;
      }

      .card-info .rating {
        color: #ddd;
        margin: 0.25rem 0;
      }

      .card-info .overview {
        color: #aaa;
        font-size: 0.85rem;
        line-height: 1.2;
        max-height: 3.6em;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>

  <body>
    <main class="detail">
      <button class="back-btn" onclick="history.back()">← Volver</button>

      {movie ? (
        <section class="content">
          <img
            class="poster"
            src={
              movie.poster_path
                ? `https://image.tmdb.org/t/p/w500${movie.poster_path}`
                : "https://via.placeholder.com/500x750?text=No+Image"
            }
            alt={movie.title ?? movie.name}
          />

          <div class="info">
            <h1>{movie.title ?? movie.name}</h1>

            <p class="rating">
              ⭐ {movie.vote_average ?? "—"} • {movie.release_date ?? movie.first_air_date ?? ""}
            </p>

            <p class="overview">{movie.overview}</p>
          </div>
        </section>
      ) : (
        <p class="not-found">No se encontró la película. Ver consola.</p>
      )}
    </main>

    <footer style="text-align:center; padding:2rem; color:#aaa;">
      <p class="brand">CODEFLIX</p>
      <p>Disfruta lo mejor del cine con tecnología y estilo</p>
      <p class="copy">© 2025 Codeflix. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
