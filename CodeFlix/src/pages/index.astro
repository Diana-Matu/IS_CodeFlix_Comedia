---
import Movies from '../components/Movies.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Movies />

  <section class="contact-cta">
    <a href="/contact" class="btn-contact">CONTACTANOS</a>
  </section>
</Layout>

<style>
  /* Contenedor para centrar el botón y darle espacio */
  .contact-cta {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 0;
    margin-top: 2rem;
    border-top: 1px solid #222; 
  }

  /* Estilo del Botón */
  .btn-contact {
    text-decoration: none;
    background-color: transparent;
    color: #EAB308;
    border: 2px solid #EAB308;
    padding: 12px 40px;
    font-size: 1.5rem;
    font-weight: bold;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* Animación al pasar el mouse */
  .btn-contact:hover {
    background-color: #EAB308;
    color: black;
    transform: scale(1.1);
    cursor: pointer;
    box-shadow: 0 0 20px rgba(234, 179, 8, 0.4);
  }
</style>